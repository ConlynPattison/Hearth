{
	"compilerOptions": {
		"module": "ESNext", // Use ESNext modules
		"target": "ESNext", // Use modern JS features
		"moduleResolution": "node", // Use Node.js-style resolution
		"esModuleInterop": true, // Enable compatibility with CommonJS modules
		"outDir": "./dist", // Output directory
		"baseUrl": "./src", // Base directory for relative imports
		"paths": {
			"*": [
				"node_modules/*",
				"src/*"
			], // Ensure correct path resolution
		}
	},
	"include": [
		"src/**/*"
	], // Include all TypeScript files
	"exclude": [
		"node_modules"
	]
}